<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorwhite">

    <ScrollView
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/frameLayout0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorwhite"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/informations_personnelles" />


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/nom_prenom"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Nom et prenom"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/newnomprenom1"
                        android:layout_width="191dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_normal"

                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cin"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="cin"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/newcin1"
                        android:layout_width="189dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_normal"

                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="age"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/newage1"
                        android:layout_width="191dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_normal"

                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tlf"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Téléphone"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/newtlf1"
                        android:layout_width="191dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_normal"

                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Email"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/newemail1"
                        android:layout_width="191dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_normal"

                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Password"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/newPassword1"
                        android:layout_width="190dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_normal"

                        android:inputType="textPassword" />
                </LinearLayout>

                <Button
                    android:id="@+id/modifier_profil"
                    android:layout_width="109dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bouton_modifier"

                    android:textColor="@color/colorwhite"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>