<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:background="@drawable/demenageur1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="TextView"
                android:textColor="@color/colorblack"
                android:textSize="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nom_pren_dem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom et prenom le demenageur:"
                    android:textColor="#FF091880"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nom_dem"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorblack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num_tlf_"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:text="Numéro de tlf:"
                    android:textColor="#FF091880"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tlf_dem0"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorblack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Email_devis"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textColor="#FF091880"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Email_dem0"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorblack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_dem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date de déménagement :"
                    android:textColor="#FF091880"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_dem0"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorblack" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="600dp"
                android:layout_height="26dp"
                android:gravity="right"
                app:srcCompat="@drawable/fleche" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>