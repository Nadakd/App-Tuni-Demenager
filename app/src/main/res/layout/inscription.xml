<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design2"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/flech"
        android:layout_width="35dp"
        android:layout_height="21dp"
        app:srcCompat="@drawable/fleche_gauche" />

    <LinearLayout
        android:id="@+id/frameLayout0"
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="483dp"
            android:layout_height="66dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="379dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/design_inscri" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


        </LinearLayout>


        <LinearLayout


            android:layout_width="324dp"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nom_prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nom et prenom *   "
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newnomprenom"
                android:layout_width="199dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="text"

                android:textCursorDrawable="@color/monsoon" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="291dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/civilite1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Civilité *"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:background="@drawable/liste_deroulate1" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="264dp"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vil"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ville *"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_ville"
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:background="@drawable/liste_deroulate1" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cin"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cin"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newcin"
                android:layout_width="199dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/age"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Age"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newage"
                android:layout_width="66dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tlf"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Téléphone *"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newtlf"
                android:layout_width="199dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="number"
                android:maxLength="8" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailEditText"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Email *"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newEmail"
                android:layout_width="199dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout


            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Password *"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="199dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="textPassword" />
        </LinearLayout>


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirm0"
                android:layout_width="108dp"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"

                android:text="Confirmer mot de passe *"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/confirme"
                android:layout_width="199dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_normal"
                android:inputType="textPassword" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottunLayout"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:orientation="vertical">

        <Button
            android:id="@+id/cree_compte"
            android:layout_width="149dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@color/colorbeige"
            android:fontFamily="monospace"
            android:onClick="signup"
            android:text="Créer un compte"
            android:textColor="@color/colorwhite"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:text="* champ obligatoire "
        android:textColor="@color/colorblack"
        android:textSize="12sp" />
</LinearLayout>
