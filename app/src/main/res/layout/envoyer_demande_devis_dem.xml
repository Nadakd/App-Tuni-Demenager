<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/design_demenagement"
    >

    <ScrollView
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="488dp"
            android:layout_height="600dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="450dp"
                android:layout_height="1200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titre_adr_dep"
                    android:layout_width="386dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Adresse de départ"
                    android:textAllCaps="true"
                    android:textColor="@color/colorbeige"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_ville_dep_devis"
                    android:layout_width="114dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/liste_deroulante_gris"
                    tools:ignore="SpeakableTextPresentCheck" />


                <EditText
                    android:id="@+id/dem_adr_dep_devis"
                    android:layout_width="290dp"
                    android:layout_height="63dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_normal_gris"
                    android:hint="adresse de départ"
                    android:padding="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/dem_cdepos_dep"
                    android:layout_width="168dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_normal_gris"
                    android:hint="code postal"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_etage_dep"
                    android:layout_width="169dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/liste_deroulante_gris"
                    tools:ignore="SpeakableTextPresentCheck" />


                <Spinner
                    android:id="@+id/spinner_ascenseur_dep"
                    android:layout_width="169dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/liste_deroulante_gris"
                    tools:ignore="SpeakableTextPresentCheck" />


                <TextView
                    android:id="@+id/titre_adr_arr"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Adresse d'arrivée"
                    android:textAllCaps="true"
                    android:textColor="@color/colorbeige"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_ville_arr_devis"
                    android:layout_width="114dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/liste_deroulante_gris"
                    tools:ignore="SpeakableTextPresentCheck" />


                <EditText
                    android:id="@+id/dem_adr_arr_devis"
                    android:layout_width="290dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_normal_gris"
                    android:hint="adresse de départ"
                    android:padding="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/dem_cdepos_arr"
                    android:layout_width="168dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_normal_gris"
                    android:hint="code postal"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_etage_arr"
                    android:layout_width="169dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/liste_deroulante_gris"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Spinner
                    android:id="@+id/spinner_ascenseur_arr"
                    android:layout_width="169dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/liste_deroulante_gris"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/distance_devis"
                    android:layout_width="270dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_normal_gris"
                    android:hint="distance"
                    android:padding="15dp"
                    android:textStyle="bold" />




                <Button
                    android:id="@+id/env_dem_devis"
                    android:layout_width="211dp"
                    android:layout_height="38dp"
                    android:background="@color/colorbeige"
                    android:fontFamily="monospace"
                    android:text="Envoyer "
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView></LinearLayout>

